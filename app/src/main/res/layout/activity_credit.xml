<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ecotourism.eco.Credit"
    android:background="@drawable/bg3">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarcredit"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/credit"/>

    <TextView
        android:id="@+id/credit1"
        android:layout_below="@id/toolbarcredit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lamoon"
        android:textSize="20dp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/credit2"
        android:layout_below="@id/credit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lamoon"
        android:textSize="20dp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/credit3"
        android:layout_below="@id/credit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lamoon"
        android:textSize="20dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/credit4"
        android:layout_below="@id/credit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lamoon"
        android:textSize="20dp"
        android:padding="10dp"/>

</RelativeLayout>

